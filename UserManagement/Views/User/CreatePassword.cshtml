@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create New Password</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #e0eafc, #cfdef3);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .reset-container {
            width: 100%;
            max-width: 400px;
            background: #ffffff;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .reset-container h2 {
            text-align: center;
            margin-bottom: 1.8rem;
            color: #333;
            font-size: 1.8rem;
        }

        .form-group {
            margin-bottom: 1.2rem;
        }

        input[type="password"] {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        input[type="password"]:focus {
            border-color: #007bff;
            outline: none;
        }

        button {
            width: 100%;
            padding: 0.9rem;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }

        .alert {
            margin-top: 1rem;
            padding: 0.8rem;
            border-radius: 6px;
            text-align: center;
            font-weight: 500;
            display: none;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
        }
    </style>
</head>
<body>

    <form id="resetForm" class="reset-container" >
        <h2>Create New Password</h2>

        <input type="hidden" id="email" />
        <input type="hidden" id="token" />

        <div class="form-group">
            <input type="password" id="newPassword" placeholder="New Password" required />
        </div>

        <div class="form-group">
            <input type="password" id="confirmPassword" placeholder="Confirm Password" required />
        </div>

        <button type="submit">Reset Password</button>
        <div id="feedback" class="alert"></div>
    </form>

    <script>
        const params = new URLSearchParams(window.location.search);
        document.getElementById("email").value = params.get("email");
        document.getElementById("token").value = params.get("token");

        document.getElementById("resetForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const dto = {
                email: document.getElementById("email").value,
                token: document.getElementById("token").value,
                newPassword: document.getElementById("newPassword").value,
                confirmPassword: document.getElementById("confirmPassword").value
            };

            const feedback = document.getElementById("feedback");
            feedback.style.display = 'none';

            try {
                const res = await fetch("http://127.0.0.1:5020/api/user/reset", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(dto)
                });

                const message = await res.text();

                feedback.textContent = message;
                feedback.className = 'alert ' + (res.ok ? 'alert-success' : 'alert-error');
                feedback.style.display = 'block';

                if (res.ok) {
                    setTimeout(() => {
                        window.close();
                    }, 2000); // Give user 2 seconds to read the message before closing
                }
            } catch (err) {
                feedback.textContent = 'An error occurred while resetting the password.';
                feedback.className = 'alert alert-error';
                feedback.style.display = 'block';
            }
        });
    </script>

</body>
</html>
